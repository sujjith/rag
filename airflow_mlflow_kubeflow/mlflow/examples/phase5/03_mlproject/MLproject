name: iris-training-project

python_env: python_env.yaml

entry_points:
  main:
    parameters:
      n_estimators: {type: int, default: 100}
      max_depth: {type: int, default: 5}
      test_size: {type: float, default: 0.2}
    command: "python train.py --n-estimators {n_estimators} --max-depth {max_depth} --test-size {test_size}"

  evaluate:
    parameters:
      run_id: {type: string}
    command: "python evaluate.py --run-id {run_id}"

  hyperparameter_search:
    parameters:
      n_trials: {type: int, default: 5}
    command: "python hyperparameter_search.py --n-trials {n_trials}"
